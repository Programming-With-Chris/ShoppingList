<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ShoppingList.Model"
             xmlns:viewmodel="clr-namespace:ShoppingList.ViewModels"
             x:DataType="viewmodel:ItemDetailViewModel"
             x:Class="ShoppingList.ItemDetail"
             Shell.PresentationMode="ModalAnimated"
             >

    <Grid>

        <VerticalStackLayout>
            <Label Text="{Binding Item.Name}" TextColor="{StaticResource Primary}"/>
            <Label Text="{Binding Item.Description}" TextColor="{StaticResource Primary}"/>
            <Label Text="{Binding Item.Category}" TextColor="{StaticResource Primary}"/>
            <Label Text="{Binding Item.Aisle}" TextColor="{StaticResource Primary}"/>
            <Label Text="{Binding Item.EstimatedPrice}" TextColor="{StaticResource Primary}"/>

        </VerticalStackLayout>
        
    </Grid>

</ContentPage>
